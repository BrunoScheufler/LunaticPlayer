<Window x:Class="LunaticPlayer.SongHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LunaticPlayer"
        mc:Ignorable="d"
        Title="Song History" Height="300" Width="400">
    <Grid>
        <ListBox x:Name="SongList">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0,2">
                        <TextBlock Text="{Binding Title}" FontSize="16"/>
                        <TextBlock Text="{Binding CircleArtist}"/>
                        <TextBlock FontSize="10">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0:00}:{1:00;00} - {2:dd.MM. HH:mm}">
                                    <Binding Path="Duration.Minutes"/>
                                    <Binding Path="Duration.Seconds"/>
                                    <Binding Path="StartTime"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
